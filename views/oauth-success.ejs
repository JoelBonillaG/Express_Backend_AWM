    </div>

    <script>
      function copyToken(tokenId) {
        const tokenBox = document.getElementById(tokenId);
        const token = tokenBox.textContent.trim();

        // Remover el texto del botÃ³n
        const tokenText = token.replace("Copiar", "").trim();

        navigator.clipboard
          .writeText(tokenText)
          .then(() => {
            const btn = tokenBox.querySelector(".copy-btn");
            const originalText = btn.textContent;
            btn.textContent = "âœ“ Copiado";
            btn.style.background = "#10b981";

            setTimeout(() => {
              btn.textContent = originalText;
              btn.style.background = "#4285f4";
            }, 2000);
          })
          .catch((err) => {
            alert("Error al copiar: " + err);
          });
      }
    </script>
  </body>
</html>
